<Application x:Class="PuzzleGame.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PuzzleGame"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/Fonts.xaml" />
                <ResourceDictionary Source="Style/Colors.xaml" />
                <ResourceDictionary Source="Style/Images.xaml" />
                <ResourceDictionary Source="Style/GUI.xaml" />
                <ResourceDictionary Source="Style/Game.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
