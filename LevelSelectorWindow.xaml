<Window x:Class="PuzzleGame.LevelSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PuzzleGame"
        mc:Ignorable="d"
        Title="LevelSelectorWindow" Height="450" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Background="{StaticResource BackgroundBlueBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Levels" FontFamily="{StaticResource GameFont}" Foreground="White" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled" Width="340" HorizontalAlignment="Center">
            <StackPanel x:Name="spLevels" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0">

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Window>
